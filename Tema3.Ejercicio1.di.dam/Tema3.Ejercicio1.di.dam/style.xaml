<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Tema3.Ejercicio1.di.dam">
    
    <Style TargetType="MenuItem" x:Key="tbMenu">
        <Setter Property="Foreground" Value="Orange"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <Style TargetType="MenuItem" x:Key="tbSubmenu">
        <Setter Property="Foreground" Value="Orange"/>
    </Style>
    <Style TargetType="Button" x:Key="btToolbar">
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="tbToolbar">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

</ResourceDictionary>