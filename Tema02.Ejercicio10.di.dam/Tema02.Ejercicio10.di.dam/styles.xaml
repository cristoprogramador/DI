<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Tema02.Ejercicio10.di.dam">
    <Style TargetType="TextBlock" x:Key="stbHead">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="15,5,5,5"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="stbText">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Margin" Value="15,5,5,5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    <Style TargetType="RadioButton" x:Key="srbText">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Foreground" Value="Gray"/>
    </Style>
    <Style TargetType="CheckBox" x:Key="cbText">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Margin" Value="15,5,5,5"/>
        <Setter Property="Foreground" Value="Gray"/>
    </Style>
</ResourceDictionary>